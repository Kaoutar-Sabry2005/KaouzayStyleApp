<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#1C1C18"
    android:layout_marginBottom="12dp">

    <!-- IMAGE DU PRODUIT (À droite comme dans le panier) -->
    <ImageView
        android:id="@+id/imgFavProduct"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:background="@drawable/size_button_background"
        android:src="@drawable/ic_launcher_background" />

    <!-- BLOC INFO (À gauche de l'image) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/imgFavProduct"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Nom produit -->
        <TextView
            android:id="@+id/txtFavName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du Produit"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Prix -->
        <TextView
            android:id="@+id/txtFavPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120.00 MAD"
            android:textColor="#C4C4C4"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <!-- Zone d'action (Bouton Supprimer) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Bouton Supprimer (Style similaire aux boutons d'action du panier) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2F2F2A"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btnDeleteFav"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_delete_24"
                    app:tint="#FAB005"
                    android:contentDescription="Supprimer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retirer"
                    android:textColor="#FAB005"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>