<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"> <!-- Fond transparent pour la CardView elle-mÃªme -->

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="#171712">

<ImageView
    android:id="@+id/productImage"
    android:layout_width="match_parent"
    android:layout_height="250dp"
android:scaleType="centerCrop"
android:src="@drawable/caftanvert"
android:contentDescription="Image du produit" />

<TextView
    android:id="@+id/productName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:text="Nom du produit"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    android:fontFamily="@font/newsreader_regular"
    android:maxLines="2"
    android:ellipsize="end" />

<TextView
    android:id="@+id/productPrice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:text="Prix du produit"
    android:textColor="#BAB09C"
    android:textSize="18sp"
    android:textStyle="bold"
    android:fontFamily="@font/newsreader_regular" />

</LinearLayout>
    </androidx.cardview.widget.CardView>
