<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171712">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- TITRE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procédure de paiement"
            android:fontFamily="@font/newsreader_regular"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Nom -->
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nom complet"
            android:fontFamily="@font/newsreader_regular"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBB19B"
            android:background="@drawable/input_style"
            android:padding="10dp" />

        <!-- Adresse -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Adresse de livraison"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/newsreader_regular"
            android:textColorHint="#BBB19B"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_style"
            android:padding="10dp" />
        <TextView
            android:id="@+id/tvTotalPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>


        <!-- Téléphone -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            android:fontFamily="@font/newsreader_regular"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBB19B"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_style"
            android:padding="10dp" />

        <!-- MODE DE PAIEMENT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Méthode de paiement"
            android:fontFamily="@font/newsreader_regular"
            android:textSize="16sp"
            android:textColor="#D5D0C8"
            android:layout_marginTop="25dp" />

        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rbCOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paiement à la livraison"
                android:fontFamily="@font/newsreader_regular"
                android:textColor="#D5D0C8" />

            <RadioButton
                android:id="@+id/rbCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carte bancaire"
                android:textColor="#D5D0C8" />
        </RadioGroup>

        <!-- BOUTON VALIDER -->
        <Button
            android:id="@+id/btnValidateOrder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Valider la commande"
            android:fontFamily="@font/newsreader_regular"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:textColor="#181611"
            android:textSize="18sp"
            android:backgroundTint="@color/kaouzay_gold"
            android:layout_marginTop="28dp"/>

    </LinearLayout>
</ScrollView>
