<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181611"
    android:padding="16dp">

    <!-- Titre -->
    <TextView
        android:id="@+id/brandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KaouZay Style"
        android:textSize="50sp"
        android:fontFamily="@font/great_vibes"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="#FFC107"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Barre de recherche -->
    <RelativeLayout
        android:id="@+id/searchBarLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/brandName"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_style"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- Icône recherche -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_search"
            app:tint="#FFFFFF"/>

        <!-- EditText -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/searchIcon"
            android:layout_marginStart="10dp"
            android:hint="Rechercher un produit..."
            android:textColor="#FFFFFF"
            android:textColorHint="#BBB19B"
            android:padding="10dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>


    <!-- Menu catégories horizontal -->
    <HorizontalScrollView
        android:id="@+id/scrollCategories"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/searchBarLayout"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/menuCategories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="4dp">

            <!-- CAFTAN -->
            <LinearLayout
                android:id="@+id/layoutCaftan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/menuCaftan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caftan"
                    android:textColor="#D5D0C8"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:gravity="center" />
                <View
                    android:id="@+id/underlineCaftan"
                    android:layout_width="26dp"
                    android:layout_height="2dp"
                    android:background="#AFAAA2"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- DJELLABA -->
            <LinearLayout
                android:id="@+id/layoutDjellaba"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/menuDjellaba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Djellaba"
                    android:textColor="#D5D0C8"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:gravity="center" />
                <View
                    android:id="@+id/underlineDjellaba"
                    android:layout_width="26dp"
                    android:layout_height="2dp"
                    android:background="#AFAAA2"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- BABOUCHES -->
            <LinearLayout
                android:id="@+id/layoutBabouches"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/menuBabouches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Babouches"
                    android:textColor="#D5D0C8"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:gravity="center" />
                <View
                    android:id="@+id/underlineBabouches"
                    android:layout_width="26dp"
                    android:layout_height="2dp"
                    android:background="#AFAAA2"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- ACCESSOIRES -->
            <LinearLayout
                android:id="@+id/layoutAccessoires"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/menuAccessoires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accessoires"
                    android:textColor="#D5D0C8"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:gravity="center" />
                <View
                    android:id="@+id/underlineAccessoires"
                    android:layout_width="26dp"
                    android:layout_height="2dp"
                    android:background="#AFAAA2"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/scrollCategories"
        android:layout_above="@id/menuBottom"
        android:layout_marginTop="20dp"/>

    <!-- Menu bas -->
    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1f1f1f"
        android:weightSum="4">

        <!-- Accueil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconAccueil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:id="@+id/menuAccueil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Catégorie -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconCategorie"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_categories" />
            <TextView
                android:id="@+id/menuCategorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catégorie"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Panier -->
        <LinearLayout
            android:id="@+id/iconPanier"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart" />
            <TextView
                android:id="@+id/menuPanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panier"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconProfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile" />
            <TextView
                android:id="@+id/menuProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
