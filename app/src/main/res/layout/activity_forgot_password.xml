<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171712"
    android:padding="24dp"
    tools:context=".ForgotPasswordActivity">

    <!-- En-tête avec l'icône de fermeture et le titre -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/icon_close_forgot_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            android:contentDescription="Fermer"
            app:tint="@color/kaouzay_gold"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/txtForgotPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Mot de passe oublié ?"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/newsreader_regular" />
    </RelativeLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/txtForgotPasswordDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginBottom="32dp"
        android:text="Entrez votre adresse e-mail pour recevoir un lien de réinitialisation de votre mot de passe."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/newsreader_regular"
        android:gravity="center" />

    <!-- Champ Email -->
    <EditText
        android:id="@+id/editEmailForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/txtForgotPasswordDescription"
        android:background="@drawable/input_style"
        android:hint="Adresse e-mail"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBB19B"
        android:fontFamily="@font/newsreader_regular"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp" />
    <TextView
        android:id="@+id/errorEmailForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmailForgotPassword"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="27dp"
        android:text="Veuillez entrer une adresse e-mail valide"
        android:textColor="@color/kaouzay_error_red"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Bouton Envoyer -->
    <Button
        android:id="@+id/btnSendResetLink"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/errorEmailForgotPassword"
        android:text="Envoyer le lien"
        android:textStyle="bold"
        android:textColor="#181611"
        android:backgroundTint="@color/kaouzay_gold"
        android:fontFamily="@font/newsreader_regular"
        android:layout_marginBottom="20dp" />

    <!-- Retour à la connexion (en bas) -->
    <TextView
        android:id="@+id/txtBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Retour à la connexion"
        android:textColor="#BBB19B"
        android:textSize="14sp"
        android:fontFamily="@font/newsreader_regular"
        android:gravity="center"
        android:padding="48dp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>