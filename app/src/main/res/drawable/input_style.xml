<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- État quand le champ est focus -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#27241b" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#f9b006" /> <!-- Couleur jaune focus -->
        </shape>
    </item>

    <!-- État normal -->
    <item>
        <shape>
            <solid android:color="#27241b" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#554d3a" />
        </shape>
    </item>

</selector>
