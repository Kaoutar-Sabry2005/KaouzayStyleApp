<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État sélectionné -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/kaouzay_gold" />
            <stroke android:width="2dp" android:color="@color/kaouzay_gold" />
        </shape>
    </item>
    <!-- État par défaut -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#3B3326" />
            <stroke android:width="1dp" android:color="#3B3326" />
        </shape>
    </item>
</selector>